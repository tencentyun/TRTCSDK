						<VerticalLayout />
					</VerticalLayout>
					<!-- top remote video render area -->
					<VerticalLayout name="view_sublayout_container1" text="" vscrollbar="true" tooltip="" width="200" header="hidden" bkcolor="#000000" childpadding="1" borderround="5,5" visible="false">
