.container {
  background-repeat:no-repeat;
  background-size: cover;
  width: 100vw;
  height: 100vh;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}
.login-header {
  height: 45vh;
  background-image: url('https://web.sdk.qcloud.com/component/miniApp/resources/login-bg.png');
  background-size: 100% 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login-header .login-header-title {
  padding: 0 40px;
  font-family: PingFangSC-Regular;
  font-size: 32px;
  color: #333333;
  letter-spacing: 0;
  line-height: 38px;
  font-weight: 400;
}
.box{
  flex: 1;
  width: 100vw;
  margin-top: -40px;
  background: #ffffff;
  border-radius: 0 40px 0 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.input-box {
  background-color: transparent;
  padding: 2vw 0 2vw 1vw;
  border-bottom: 1px solid #EEEEEE;
  margin: 20rpx 0 20rpx 20rpx;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  width: 80vw;
  position: relative;
  align-items: center;
  font-size: 20rpx;
}
input{
  display: flex;
  font-size: 20px; 
  width: 60vw;
}

.login {
  display: flex;
  width: 100vw;
  text-align: center;
  bottom: 5vh;
  margin:70rpx
}
.login button{
  width: 80%;
  background-color: #006eff;
  border-radius: 50px;
  color:white
}
.codeBtn{
  float: right;
  height: 60rpx;
  min-height: 60rpx;
  line-height: 60rpx;
  font-size: 12px;
  font-weight: normal;
  padding: 0 10rpx;
  
}
.btn{
  width:180rpx;
  color: #006eff;
  background-color: white;
  align-items: center;
}
.close {
  position:absolute;
  padding-left:5vw;
  padding-right:5vw;
  width:50rpx;
  height:60rpx;
}
