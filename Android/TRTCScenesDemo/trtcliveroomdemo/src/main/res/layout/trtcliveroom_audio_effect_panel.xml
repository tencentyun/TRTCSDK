<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trtcliveroom_bg_bottom_dialog"
    android:layout_gravity="bottom"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:id="@+id/ll_panel"
    android:orientation="vertical">

    <View
        android:background="@drawable/trtcliveroom_bottom_dialog_tip"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="32dp"
        android:layout_height="4dp" />

    <LinearLayout
        android:id="@+id/audio_main_bgm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bgm_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="@string/trtcliveroom_bgm_title"
                android:textColor="@color/trtcliveroom_color_black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/trtcliveroom_back"
                android:textColor="@color/trtcliveroom_color_blue"
                android:textSize="16sp" />
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/audio_bgm_rv"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/audio_main_ll"
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/music_effect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/trtcliveroom_sound_effects"
                android:textColor="@color/trtcliveroom_color_black"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/link_music"
                android:src="@drawable/trtcliveroom_ic_link_music"
                android:layout_toRightOf="@id/music_effect"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:layout_width="16dp"
                android:layout_height="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_music_audition"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/music_audition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:text="@string/trtcliveroom_sound_audition"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/music_description"
                android:layout_toRightOf="@id/music_audition"
                android:layout_marginLeft="8dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trtcliveroom_put_on_your_headphones"
                android:textColor="@color/trtcliveroom_light_black"
                android:textSize="12sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_select_bgm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bgm"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text="@string/trtcliveroom_copyright_sounds"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/audio_btn_select_song"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/trtcliveroom_select_song"
                android:visibility="visible"
                android:textColor="@color/trtcliveroom_light_black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_select_song"
                android:src="@drawable/trtcliveroom_ic_arrow_right_black"
                android:layout_gravity="center_vertical"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/tv_actor"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:visibility="gone"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_bgm_start_time"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="00:00"
                android:visibility="gone"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_bgm_end_time"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="/04:00"
                android:visibility="gone"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="14sp"/>


            <ImageButton
                android:id="@+id/ib_audio_bgm_play"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textColor="@color/trtcliveroom_dark_black"
                android:src="@drawable/trtcliveroom_bgm_play"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_music_volume_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/trtcliveroom_music_volume"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/sb_bgm_volume"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:max="100"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:progress="100"
                android:progressDrawable="@drawable/trtcliveroom_seekbar_progress_drawable"
                android:thumb="@drawable/trtcliveroom_seekbar_progress_thumb" />

            <TextView
                android:id="@+id/tv_bgm_volume"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:text="100"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="16sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/trtcliveroom_mic_volume"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/sb_mic_volume"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:max="100"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:progress="100"
                android:progressDrawable="@drawable/trtcliveroom_seekbar_progress_drawable"
                android:thumb="@drawable/trtcliveroom_seekbar_progress_thumb" />

            <TextView
                android:id="@+id/tv_mic_volume"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:gravity="right"
                android:text="100"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_music_tone_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/trtcliveroom_sounds_adjustment"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="16sp" />

            <SeekBar
                android:id="@+id/sb_pitch_level"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:layout_gravity="center_vertical"
                android:max="100"
                android:maxHeight="4dp"
                android:minHeight="4dp"
                android:progress="50"
                android:progressDrawable="@drawable/trtcliveroom_seekbar_progress_drawable"
                android:thumb="@drawable/trtcliveroom_seekbar_progress_thumb" />

            <TextView
                android:id="@+id/tv_pitch_level"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/trtcliveroom_dark_black"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="left"
            android:text="@string/trtcliveroom_changer"
            android:textColor="@color/trtcliveroom_dark_black"
            android:textStyle="bold"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/audio_change_type_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="@string/trtcliveroom_reverb"
            android:textColor="@color/trtcliveroom_dark_black"
            android:textStyle="bold"
            android:textSize="16sp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/audio_reverb_type_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp" />

    </LinearLayout>

</LinearLayout>