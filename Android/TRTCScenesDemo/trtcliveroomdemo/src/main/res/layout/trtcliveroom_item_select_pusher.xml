<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_pk_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@android:color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/trtcliveroom_bg_cover"
        app:layout_constraintBottom_toBottomOf="@+id/cl_pk_select"
        app:layout_constraintLeft_toLeftOf="@id/cl_pk_select"
        app:layout_constraintTop_toTopOf="@+id/cl_pk_select" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="8dp"
        android:textColor="#666666"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
        app:layout_constraintTop_toTopOf="@+id/cl_pk_select"
        tools:text="@string/trtcliveroom_text_anchor_name" />

    <TextView
        android:id="@+id/tv_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="#666666"
        android:layout_marginTop="2dp"
        android:textSize="@dimen/trtcliveroom_text_size_middle"
        app:layout_constraintLeft_toRightOf="@+id/iv_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_user_name"
        tools:text="@string/trtcliveroom_text_room_name" />

    <Button
        android:id="@+id/btn_invite_anchor"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:background="@drawable/trtcliveroom_bg_live_room_invite_btn"
        android:text="@string/trtcliveroom_btn_invite"
        android:textColor="@color/white"
        android:textSize="@dimen/trtcliveroom_text_size_middle"
        app:layout_constraintBottom_toBottomOf="@+id/cl_pk_select"
        app:layout_constraintRight_toRightOf="@+id/cl_pk_select"
        app:layout_constraintTop_toTopOf="@+id/cl_pk_select" />
</android.support.constraint.ConstraintLayout>