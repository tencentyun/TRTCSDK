<resources>
    <style name="AppBaseTheme" parent="android:Theme.Black.NoTitleBar">
    </style>

    <style name="TRTCLiveRoomDialogFragment" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/trtcliveroom_color_bg_dialog_black</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!--video model -->
    <style name="TRTCLiveRoomDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert"/>

    <!-- Input dialog theme. -->
    <style name="TRTCLiveRoomInputDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--BeautyPanelStyleStart-->
    <style name="TRTCLiveRoomBeautyTheme" parent="BeautyPanelStyle">
        <item name="beautyPanelColorPrimary">@color/trtcliveroom_color_accent</item>
    </style>

    <style name="TRTCLiveRoomLinkMic">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>
    <!--BeautyPanelStyleEnd-->
</resources>
