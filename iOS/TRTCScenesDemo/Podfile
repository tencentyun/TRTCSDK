  pod 'RxCocoa'
  pod 'SnapKit'
  pod 'Alamofire'
  pod 'Toast-Swift'
  pod 'Material'
  pod 'NVActivityIndicatorView'
end

def common_pods_all
  pod 'Bugly' # 检测bug使用，非必须依赖
  pod 'SDWebImage'
  pod 'Masonry'
  pod 'MBProgressHUD', '~> 1.2.0'
  pod 'MJExtension'
  pod 'MJRefresh'
  pod 'AFNetworking'
  pod 'BlocksKit', '~> 2.2.5'
  pod 'CWStatusBarNotification', '~> 2.3.5'
end

def common_pods_smart
  pod 'CWStatusBarNotification', '~> 2.3.5'
end


target 'TXLiteAVDemo_TRTC' do
  common_pods_all
  tx_im
  swift_pods
end

target 'TXReplaykitUpload_TRTC' do

end

